  <title>TAMU Disc Golf</title>

  <!-- Bootstrap core CSS -->
  <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">

  <!-- Custom styles for this template -->
  <link href="../css/modern-business.css" rel="stylesheet" type="text/css">

  {{!-- Bootstrap 4 has dropped glyphicons. Using this CDN for now. --}}
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

</head>

<body>

  <nav class="navbar fixed-top navbar-expand-lg navbar-dark fixed-top">
    <div class="container">
      <a class="navbar-brand" href="/">TAMU Disc Golf</a>
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="teams">Competitive Teams</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="officers">Officers</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="courses">Local Courses</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="lostandfound">Lost &amp; Found</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="news">News/Recent Events</a>
          </li>
        </ul>
      </div>
    </div>
    <div class="nav-item">
      {{#if auth}}
      <a href="#" id="navbarDropdownProfile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <img class="profile-dropdown" src="{{profile_pic}}" alt="Profile"/>
      </a>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownProfile">
        {{#if admin}}
        <a class="dropdown-item" href="admin">Admin</a>
        {{/if}}
        <a class="dropdown-item" href="profile">Profile</a>
        <a class="dropdown-item" href="logout">Log Out</a>
      </div>
      {{else}}
      <a class="login btn btn-light btn-outline-dark btn-sm" href="login">Log In</a>
      {{/if}}
    </div>
    <!-- <button type="button" class="login btn btn-light btn-outline-dark btn-sm"><span style="font-size:larger;">Log In</span></button> -->
  </nav>


  <div class="mainbody">
  {{{body}}}
  </div>

  <!-- Footer -->
  <footer class="py-5 mt-5 bg-dark">
    <!--Social Media Icons-->
    <div class="media-icon" style="display:block; text-align:center; margin-bottom: 15px;">
      <a href="https://www.facebook.com/" ><img id="fbicon" style="margin-right: 15px;" height="35" width="35" src="../images/icons/fbicon.png"></a>
      <a href="https://www.instagram.com/?hl=en"><img id="instaicon" style="margin-right: 15px" height="35" width="35" src="../images/icons/instaicon.png"></a>
      <a href="https://twitter.com/?lang=en"><img id="twittericon" height="30" width="30" src="../images/icons/twittericon.png"></a>
    </div>
    <div class="container">
      <p class="m-0 text-center text-white">Copyright &copy; TAMU Disc Golf 2020</p>
    </div>
    <!-- /.container -->
  </footer>

  <!-- Bootstrap core JavaScript -->
  <script type="text/javascript" src="../vendor/jquery/jquery.min.js"></script>
  <script type="text/javascript" src="../vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

</body>

</html>
